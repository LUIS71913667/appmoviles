<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:background="@drawable/fondviaj"
    android:layout_height="match_parent"
    tools:context=".MainActivityReserViajes">

    <TextView
        android:id="@+id/tv_reservas_viaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="VIAJES"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

        <!-- Campo de Nombre -->
        <EditText
            android:id="@+id/et_nombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:layout_marginTop="24dp"
            android:inputType="textPersonName"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_reservas_viaje"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="16dp"/>

        <!-- Campo de Destino -->
        <EditText
            android:id="@+id/et_destino"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Destino"
            android:layout_marginTop="16dp"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/et_nombre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="16dp"/>

        <!-- Campo de Fecha de Inicio -->
        <TextView
            android:id="@+id/tv_fecha_inicio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Selecciona Fecha de Inicio"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/et_destino"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="16dp"/>

        <!-- Campo de Fecha de Fin -->
        <TextView
            android:id="@+id/tv_fecha_fin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Selecciona Fecha de Fin"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha_inicio"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="16dp"/>

        <!-- Campo de Número de Personas -->
        <EditText
            android:id="@+id/et_num_personas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Número de Personas"
            android:layout_marginTop="16dp"
            android:inputType="number"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_fecha_fin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="16dp"/>

        <!-- Botón de Reservar -->
        <Button
            android:id="@+id/btn_reservar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Reservar"
            android:layout_marginTop="24dp"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/et_num_personas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="16dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
